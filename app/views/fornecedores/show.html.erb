<%- model_class = Fornecedore -%>
<%  if can? :edit, Fornecedore
        @edit = false
    else
        @edit = true
    end
    if can? :destroy, Fornecedore
        @del = false
    else
        @del = true
    end
    if can? :new, Fornecedore
        @new = false
    else
        @new = true
    end
%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:fornecedor) %>:</strong></dt>
  <dd><%= @fornecedore.fornecedor %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contato) %>:</strong></dt>
  <dd><%= @fornecedore.contato %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              fornecedores_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
    edit_fornecedore_path(@fornecedore),:disabled => @edit, :class => 'btn btn-primary' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              fornecedore_path(@fornecedore),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },:disabled => @del,
              :class => 'btn btn-danger' %>
</div>
