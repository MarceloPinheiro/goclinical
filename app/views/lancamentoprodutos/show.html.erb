<%- model_class = Lancamentoproduto -%>
<% if(Lancamento.find(@lancamentoproduto.lancamento).status == 0)
      @disable = false
   else
      @disable = true
    end
  %>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:lancamento) %>:</strong></dt>
  <dd><%= @lancamentoproduto.lancamento %></dd>
  <dt><strong><%= model_class.human_attribute_name(:produto) %>:</strong></dt>
  <dd><%= @lancamentoproduto.produto %></dd>
  <dt><strong><%= model_class.human_attribute_name(:quantidade) %>:</strong></dt>
  <dd><%= @lancamentoproduto.quantidade %></dd>
  <dt><strong><%= model_class.human_attribute_name(:valor) %>:</strong></dt>
  <dd><%= number_to_currency(@lancamentoproduto.valor) %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
    lancamentoprodutos_path(:lancamento => @lancamentoproduto.lancamento), :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
    edit_lancamentoproduto_path(@lancamentoproduto,:lancamento=>@lancamentoproduto.lancamento), :class => 'btn btn-primary',:disabled=>@disable %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
    lancamentoproduto_path(@lancamentoproduto,:lancamento => @lancamentoproduto.lancamento),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger',:disabled=>@disable %>
</div>
